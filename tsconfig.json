{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "downlevelIteration": true,
    "jsx": "react",
    "removeComments": true,
    "declaration": true,
    "sourceMap": false
  },
  "include": [
    "src"
  ]
}